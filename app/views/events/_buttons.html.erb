<% if can? :edit, event%>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), 
    edit_event_path(event), :class => 'btn btn-default btn-xs' %>
<% end %>   
<%= link_to t('.create', :default => t("helpers.submit.create", :model => EventTemplate.model_name.human.titleize)),new_event_template_event_path(event), :class => 'btn btn-default btn-xs' %>
<% if can? :destroy, event %>  
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(event),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
<% end %>
<% if @favorites.include?(event) %>
  <%= link_to t('.toogle', :default => t("helpers.links.remove_favorite")),index_toggle_favorite_event_path(event), :class => 'btn btn-xs btn-danger' %>
<% else %>
  <%= link_to t('.toogle', :default => t("helpers.links.add_favorite")),index_toggle_favorite_event_path(event), :class => 'btn btn-xs btn-primary' %>
<% end %>