<div id="filterrific_results">
  <%= will_paginate @events, renderer: BootstrapPagination::Rails %>
  <div>
    <%= page_entries_info events %>
  </div>

  <table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name 'name' %></th>
      <th><%= model_class.human_attribute_name 'description' %></th>
      <th><%= model_class.human_attribute_name 'rooms' %></th>
      <th><%= model_class.human_attribute_name 'starts_at' %> / 
          <%= model_class.human_attribute_name 'ends_at' %></th>
      <th><%= model_class.human_attribute_name 'status' %></th>
      <th><%= model_class.human_attribute_name 'user' %></th>
      <th><%= t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= trimDescription event.description %></td>
        <td><%= event.rooms.map(&:name).to_sentence %></td>
        <td><%=l event.starts_at if event.starts_at  %> / <BR>
        <%=l event.ends_at if event.ends_at %></td>
        <td><%= event.status %></td>
        <td><%= event.user_id %></td>
        <td>
          <% if can? :edit, event%>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_event_path(event), :class => 'btn btn-default btn-xs' %>
          <% end %>   
            <%= link_to t('.create', :default => t("helpers.submit.create", :model => EventTemplate.model_name.human.titleize)),
                        new_event_template_from_event_path(event), :class => 'btn btn-default btn-xs' %>
           <% if can? :destroy, event %>  
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        event_path(event),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>
          <% if @favorites.include? event %>
            <%= link_to t('.toogle', :default => t("helpers.links.remove_favorite")),index_toggle_favorite_from_event_path(event), :class => 'btn btn-xs btn-danger' %>
          <% else %>
            <%= link_to t('.toogle', :default => t("helpers.links.add_favorite")),index_toggle_favorite_from_event_path(event), :class => 'btn btn-xs btn-primary' %>
          <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
<%= will_paginate events, renderer: BootstrapPagination::Rails %>
</div>

