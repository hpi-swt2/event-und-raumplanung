<% if event.status == "suggested" %> 
	<% if can? :decline_event_suggestion, event %>
		<%= link_to t('.decline', :default => t("helpers.links.decline")), 
			decline_event_suggestion_event_path(event), :class => 'btn btn-danger btn-xs' %>
	<% end %> 
	<% if can? :approve_event_suggestion, event %>   
    	<%= link_to t('.approve', :default => t("helpers.links.approve")), approve_event_suggestion_event_path(event), :class => 'btn btn-success btn-xs' %>
	<% end %>
<% elsif event.status == "rejected_suggestion" %> 
	<% if can? :edit, event.event %>
		<%= link_to t('.edit_original_event', :default => t("events.links.edit_original_event")), edit_event_path(event.event), :class => 'btn btn-warning btn-xs' %>
	<% end %>
	<% if can? :destroy, event.event %> 
  		<%= link_to t('.destroy', :default => t("events.links.destroy_original_event")),
              event_path(event.event),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
    <% end %> 
<% end %>